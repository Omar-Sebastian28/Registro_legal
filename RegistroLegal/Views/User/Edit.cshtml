@model UpdateUserViewModel

@{
    bool isAdmin = true;
    if (!User.IsInRole(Roles.Admin.ToString()))
    {
        Layout = "_LayoutUsuario";
        isAdmin = false;
    }
}

@{
    ViewData["Title"] = "Editar usuario.";
}

<div class="container mt-5">
    <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <div class="card shadow-lg border-0 rounded-4">

            <div class="card-header bg-success text-white text-center rounded-top-4 d-flex flex-column align-items-center py-4">
                <i class="bi bi-person-circle fs-2 mb-2"></i>
                <h4 class="mb-0 fw-semibold">Editar Usuario</h4>
                <small class="text-white-50">Actualiza tu información de cuenta</small>
            </div>

            <div class="card-body p-4">
                <form asp-controller="User" asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id"/> 

                    <!-- Perfil -->
                    <div class="d-flex flex-column align-items-center mb-4">
                        <img src="@Model.ImagenPerfilFile" alt="Foto de perfil" class="rounded-circle shadow-sm mb-3" width="100" height="100">
                        <label class="btn btn-outline-secondary btn-sm">
                            Cambiar foto <input asp-for="ImagenPerfilFile" type="file" hidden>
                        </label>
                    </div>

                    <!-- Datos -->
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label fw-semibold">Nombre</label>
                        <input asp-for="Nombre" class="form-control form-control-lg rounded-pill" placeholder="Ingrese su nombre" />
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apellido" class="form-label fw-semibold">Apellido</label>
                        <input asp-for="Apellido" class="form-control form-control-lg rounded-pill" placeholder="Ingrese su apellido" />
                        <span asp-validation-for="Apellido" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label fw-semibold">Nombre de usuario</label>
                        <input asp-for="UserName" class="form-control form-control-lg rounded-pill" placeholder="Nombre de usuario" />
                        <span asp-validation-for="UserName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-semibold">Email</label>
                        <input asp-for="Email" class="form-control form-control-lg rounded-pill" placeholder="ejemplo@gmail.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="Password" class="form-label fw-semibold">Password</label>
                            <input asp-for="Password" class="form-control form-control-lg rounded-pill" placeholder="Nueva contraseña" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ConfrimPassword" class="form-label fw-semibold">Confirmar contraseña</label>
                            <input asp-for="ConfrimPassword" class="form-control form-control-lg rounded-pill" placeholder="Confirmar contraseña" />
                            <span asp-validation-for="ConfrimPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label fw-semibold">Teléfono</label>
                        <input asp-for="Phone" class="form-control form-control-lg rounded-pill" placeholder="Ej. +1 809-555-5555" />
                    </div>

                    @{
                        if (User.IsInRole(Roles.Admin.ToString()))
                        {
                            <div class="mb-3">
                                <label asp-for="Role" class="form-label fw-semibold">Rol del usuario</label>
                                <select asp-for="Role" class="form-select form-select-lg rounded-pill">
                                    <option value="0">Seleccione el rol de este usuario</option>
                                    <option value="Admin">Administrador</option>
                                    <option value="Usuario">Usuario</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger small"></span>
                            </div>
                     }   }
                        <!-- Botones -->
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-controller=@(isAdmin ? "User" : "Home") asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill d-flex align-items-center gap-2">
                            <i class="bi bi-x-lg"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-success btn-lg rounded-pill d-flex align-items-center gap-2">
                            <i class="bi bi-save"></i> Guardar Usuario
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



