@{
    bool nuevoUsuario = false;
    string controladorDestino;
}
@if (ViewBag.Registrado == false)
{
    Layout = "_LayoutAnomino";
    nuevoUsuario = true;
}
@model SaveUserViewModel

@{
    ViewData["Title"] = "Registrar usuario";
    controladorDestino = nuevoUsuario ? "Login" : "User";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="col-11 col-sm-9 col-md-7 col-lg-5">
        <div class="card shadow-lg border-0 rounded-4">

            <div class="card-body p-5">
                <!-- Logo / Icono -->
                <div class="text-center mb-4">
                    <i class="bi bi-person-plus-fill text-success" style="font-size: 3rem;"></i>
                    <h3 class="fw-bold mt-3">Crear cuenta</h3>
                    <p class="text-muted">Completa la información para registrar un nuevo usuario</p>
                </div>

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger mb-3 text-start" })

                <form asp-controller="User" asp-action="Create" method="post" enctype="multipart/form-data">

                    <div class="form-floating mb-3">
                        <input asp-for="Nombre" class="form-control rounded-3" placeholder="Nombre" />
                        <label asp-for="Nombre"><i class="bi bi-person me-2"></i> Nombre</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Apellido" class="form-control rounded-3" placeholder="Apellido" />
                        <label asp-for="Apellido"><i class="bi bi-person-badge me-2"></i> Apellido</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="UserName" class="form-control rounded-3" placeholder="Usuario" />
                        <label asp-for="UserName"><i class="bi bi-at me-2"></i> Nombre de usuario</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" type="email" class="form-control rounded-3" placeholder="correo@ejemplo.com" />
                        <label asp-for="Email"><i class="bi bi-envelope me-2"></i> Correo electrónico</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control rounded-3" placeholder="Contraseña" />
                        <label asp-for="Password"><i class="bi bi-lock me-2"></i> Contraseña</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="ConfirmPasword" type="password" class="form-control rounded-3" placeholder="Confirmar contraseña" />
                        <label asp-for="ConfirmPasword"><i class="bi bi-shield-check me-2"></i> Confirmar contraseña</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Phone" class="form-control rounded-3" placeholder="Teléfono" />
                        <label asp-for="Phone"><i class="bi bi-telephone me-2"></i> Teléfono</label>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImagenPerfilFile" class="form-label fw-semibold">
                            <i class="bi bi-camera me-2"></i> Foto de perfil
                        </label>
                        <input asp-for="ImagenPerfilFile" class="form-control rounded-3" type="file" />
                    </div>

                    @{
                        if (User.IsInRole(Roles.Admin.ToString()))
                        {
                            <div class="form-floating mb-4">
                                <select asp-for="Role" class="form-select rounded-3">
                                    <option value="">Seleccione un rol</option>
                                    <option value="Admin">Administrador</option>
                                    <option value="Usuario">Usuario</option>
                                </select>
                                <label asp-for="Role"><i class="bi bi-people me-2"></i> Rol</label>
                            </div>
                        }
                    }
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-controller="@controladorDestino"
                           asp-action="Index"
                           class="btn btn-outline-secondary rounded-3 px-4">
                            <i class="bi bi-x-circle me-1"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-success rounded-3 px-4 fw-semibold shadow-sm">
                            <i class="bi bi-check2-circle me-1"></i> Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
