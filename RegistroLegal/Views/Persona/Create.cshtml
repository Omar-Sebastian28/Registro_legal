@if (User.IsInRole(Roles.Usuario.ToString()))
{
    Layout = "_LayoutUsuario";
}
@model CreatePersonaViewModel

@{
    ViewData["Title"] = "Registrar Persona";
}

<div class="container mt-5">
    <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <div class="card shadow-lg border-0 rounded-4">

            <div class="card-header bg-success bg-gradient text-white text-center rounded-top-4 py-3">
                <h4 class="mb-0 fw-semibold">
                    <i class="bi bi-person-plus-fill me-2"></i> Registrar Nueva Persona
                </h4>
            </div>

            <div class="card-body p-4">
                <form asp-controller="Persona" asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
                    <input type="hidden" asp-for="CreatedById">
                    @Html.AntiForgeryToken()

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger rounded-3 mb-4" role="alert">
                            @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                        </div>
                    }

                    <div class="mb-3">
                        <label asp-for="NombrePersona" class="form-label fw-semibold">Nombre</label>
                        <input asp-for="NombrePersona" class="form-control rounded-3" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apellido" class="form-label fw-semibold">Apellido</label>
                        <input asp-for="Apellido" class="form-control rounded-3" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Nacionalidad" class="form-label fw-semibold">Nacionalidad</label>
                        <input asp-for="Nacionalidad" class="form-control rounded-3"/>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Cedula" class="form-label fw-semibold">Cédula</label>
                        <input asp-for="Cedula" class="form-control rounded-3"/>
                    </div>


                    <div class="mb-3">
                        <label asp-for="Telefono" class="form-label fw-semibold">Teléfono</label>
                        <input asp-for="Telefono" class="form-control rounded-3"/>
                    </div>

                     <div class="mb-4">
                        <label asp-for="FotoPersona" class="form-label fw-semibold">Foto</label>
                        <input asp-for="FotoPersona" class="form-control rounded-3"/>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-controller="Persona" asp-action="Index" class="btn btn-outline-secondary rounded-3 px-4">
                            <i class="bi bi-x-circle me-1"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-success rounded-3 px-4">
                            <i class="bi bi-save2 me-1"></i> Guardar
                        </button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
