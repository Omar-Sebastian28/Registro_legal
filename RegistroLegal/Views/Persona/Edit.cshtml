@if (User.IsInRole(Roles.Usuario.ToString()))
{
    Layout = "_LayoutUsuario";
}
@model CreatePersonaViewModel

@{
    ViewData["Title"] = "Editar Persona";
}

<div class="container mt-5">
    <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-primary text-white text-center rounded-top-4">
                <h4 class="mb-0">Editar Información de la Persona</h4>
            </div>

            <div class="card-body p-4">
                <form asp-controller="Persona" asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="NombrePersona" class="form-label">Nombre</label>
                        <input asp-for="NombrePersona" class="form-control" placeholder="Ej. Juan" />
                        <span asp-validation-for="NombrePersona" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apellido" class="form-label">Apellido</label>
                        <input asp-for="Apellido" class="form-control" placeholder="Ej. Pérez" />
                        <span asp-validation-for="Apellido" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Nacionalidad" class="form-label">Nacionalidad</label>
                        <input asp-for="Nacionalidad" class="form-control" placeholder="Ej. Dominicana" />
                        <span asp-validation-for="Nacionalidad" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Cedula" class="form-label">Cédula</label>
                        <input asp-for="Cedula" class="form-control" placeholder="Ej. 00112345678" />
                        <span asp-validation-for="Cedula" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Telefono" class="form-label">Teléfono</label>
                        <input asp-for="Telefono" class="form-control" placeholder="Ej. 8091234567" />
                        <span asp-validation-for="Telefono" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="FotoPersona" class="form-label">Foto (URL o nombre de archivo)</label>
                        <input asp-for="FotoPersona" class="form-control"/>
                        <span asp-validation-for="FotoPersona" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-controller="Persona" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-floppy2"></i> Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

