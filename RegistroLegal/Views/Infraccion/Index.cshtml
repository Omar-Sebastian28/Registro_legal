@if (User.IsInRole(Roles.Usuario.ToString()))
{
    Layout = "_LayoutUsuario";
}
@model List<BasicIlicitoViewModel>

@{
    ViewData["Title"] = "Listado de Ilícitos";
}

<div class="container py-5">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <h1 class="h3 fw-bold text-dark mb-0">
            <i class="bi bi-journal-text text-primary me-2"></i> Listado de Ilícitos
        </h1>
        <a class="btn btn-success px-4 rounded-pill shadow-sm d-flex align-items-center"
           asp-controller="Infraccion" asp-action="Create">
            <i class="bi bi-plus-circle me-2"></i> Nuevo Ilícito
        </a>
    </div>

    <!-- Sin registros -->
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center rounded-4 shadow-sm py-4">
            <i class="bi bi-info-circle me-2"></i>
            No hay ilícitos registrados en el sistema.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-lg border-0 rounded-4 overflow-hidden hover-shadow">

                        <!-- Encabezado -->
                        <div class="card-header bg-primary-subtle border-0 py-3 d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill text-danger fs-5 me-2"></i>
                            <h5 class="mb-0 text-primary fw-semibold text-truncate" title="@item.Tipo">
                                @item.Tipo
                            </h5>
                        </div>

                        <!-- Cuerpo -->
                        <div class="card-body p-4">
                            <p class="text-muted small mb-3">
                                <strong class="text-dark">Descripción:</strong><br />
                                <span class="d-inline-block text-truncate"
                                      style="max-width: 100%;"
                                      title="@item.Descripcion">
                                    @item.Descripcion
                                </span>
                            </p>

                            <ul class="list-unstyled small mb-0">
                                <li class="mb-2">
                                    <i class="bi bi-person text-secondary me-1"></i>
                                    <strong class="text-dark">Persona:</strong><br />
                                    <span>@item.Persona?.NombrePersona @item.Persona?.Apellido</span>
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-newspaper text-secondary me-1"></i>
                                    <strong class="text-dark">Medio de noticia:</strong><br />
                                    <span>@item.Medio?.NombreMedio</span>
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-calendar-event text-secondary me-1"></i>
                                    <strong class="text-dark">Fecha de acusación:</strong><br />
                                    <span class="badge bg-primary-subtle text-primary fw-semibold px-3 py-1 rounded-pill shadow-sm">
                                        @item.FechaAcusacion.ToString("dd/MM/yyyy")
                                    </span>
                                </li>

                                @if (item.FechaFin != null)
                                {
                                    <li>
                                        <i class="bi bi-calendar-check text-secondary me-1"></i>
                                        <strong class="text-dark">Fecha de cierre:</strong><br />
                                        <span class="badge bg-success-subtle text-success fw-semibold px-3 py-1 rounded-pill shadow-sm">
                                            @item.FechaFin?.ToString("dd/MM/yyyy")
                                        </span>
                                    </li>
                                }
                            </ul>
                        </div>

                        <!-- Footer acciones -->
                        <div class="card-footer bg-white border-0 d-flex justify-content-end gap-2 px-4 pb-4">
                            <a asp-controller="Infraccion" asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-outline-warning btn-sm rounded-pill px-3 shadow-sm">
                                <i class="bi bi-pencil-square me-1"></i> Editar
                            </a>
                            <a asp-controller="Infraccion" asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-outline-danger btn-sm rounded-pill px-3 shadow-sm">
                                <i class="bi bi-trash me-1"></i> Eliminar
                            </a>
                        </div>

                    </div>
                </div>
            }
        </div>
    }
</div>

