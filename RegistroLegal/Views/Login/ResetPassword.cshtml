@model ResetPasswordRequestViewModel
@{
    ViewData["Title"] = "Cambiar contraseña";
    Layout = "_LayoutAnomino";
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="col-12 col-md-8 col-lg-5">
        <div class="card shadow-lg border-0 rounded-4">

            <div class="card-header bg-success bg-gradient text-white text-center rounded-top-4 py-3">
                <h3 class="mb-0 fw-bold">
                    <i class="bi bi-shield-lock me-2"></i> Cambiar contraseña
                </h3>
            </div>

            <div class="card-body p-4">
                <p class="text-muted text-center mb-4">
                    Por favor ingresa una nueva contraseña segura y confírmala para actualizar tu acceso.
                </p>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger rounded-3 mb-4" role="alert">
                        @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                    </div>
                }

                <form asp-controller="Login" asp-action="ResetPassword" method="post" novalidate>
                    @Html.AntiForgeryToken()

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Token" />

                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control rounded-3"/>
                        <label asp-for="Password"><i class="bi bi-lock me-2"></i> Nueva contraseña</label>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="ConfirmPassword" type="password" class="form-control rounded-3"/>
                        <label asp-for="ConfirmPassword"><i class="bi bi-lock-fill me-2"></i> Confirmar contraseña</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-success w-100 rounded-3 fw-semibold py-2 shadow-sm">
                        <i class="bi bi-check-circle me-1"></i> Actualizar contraseña
                    </button>
                </form>
            </div>

            <div class="card-footer bg-white text-center border-0 rounded-bottom-4 py-3">
                <a asp-controller="Login" asp-action="Index" class="fw-semibold text-success text-decoration-none">
                    <i class="bi bi-arrow-left me-1"></i> Volver al inicio de sesión
                </a>
            </div>
        </div>
    </div>
</div>
