@{
    bool isAdmin = false;
    Layout = "_LayoutAnomino";
}

@{
    if (User.IsInRole(Roles.Admin.ToString()))
    {
        isAdmin = true;    
    }
}
<div class="container mt-5">
    <div class="alert alert-light border shadow-sm rounded-4 p-4 d-flex align-items-center" role="alert">

        <div class="me-4 d-flex align-items-center justify-content-center bg-warning bg-opacity-25 rounded-circle"
             style="width:70px; height:70px;">
            <i class="bi bi-exclamation-triangle-fill text-warning fs-2"></i>
        </div>

        <div class="flex-grow-1">
            <h4 class="fw-bold text-dark mb-2">Acceso denegado</h4>
            <p class="text-muted mb-3">
                No tienes permisos para acceder a esta sección.
                Si crees que se trata de un error, contacta con el administrador del sistema.
            </p>

            <a asp-controller="@(isAdmin ? "User" : "Home")"
               asp-action="Index"
               class="btn btn-primary rounded-3 fw-semibold px-4">
                <i class="bi bi-house-door"></i> Volver al inicio
            </a>
        </div>
    </div>
</div>



