@model LoginViewModel
@{
    Layout = "_LayoutAnomino";
    ViewData["Title"] = "Login";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="col-11 col-sm-8 col-md-6 col-lg-4">
        <div class="card shadow-lg border-0 rounded-4">

            <div class="card-body p-5 text-center">
              
                <div class="mb-4">
                    <i class="bi bi-shield-lock-fill text-success" style="font-size: 3rem;"></i>
                </div>

                <h3 class="fw-bold mb-3">Bienvenido</h3>
                <p class="text-muted mb-4">Accede con tu usuario y contraseña para continuar</p>

                @Html.ValidationSummary(false, "", new { @class = "text-danger mb-3 text-start" })

                <form asp-controller="Login" asp-action="Index" method="post">

                    <div class="form-floating mb-3">
                        <input asp-for="UserName" class="form-control rounded-3" placeholder="Usuario" />
                        <label asp-for="UserName"><i class="bi bi-person me-2"></i> Usuario</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Password" type="password" class="form-control rounded-3" placeholder="Contraseña" />
                        <label asp-for="Password"><i class="bi bi-lock me-2"></i> Contraseña</label>
                    </div>

                    <button type="submit" class="btn btn-success w-100 rounded-3 py-2 fw-semibold shadow-sm">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Iniciar sesión
                    </button>
                </form>

                <div class="mt-4">
                    <a asp-controller="Login" asp-action="ForgotPassword" class="small text-decoration-none">¿Olvidaste tu contraseña?</a>
                </div>
            </div>

            <div class="card-footer bg-white text-center border-0 rounded-bottom-4 py-3">
                <small class="text-muted">¿No tienes cuenta? </small>
                <a asp-controller="User" asp-action="Create" class="fw-semibold text-success text-decoration-none">Regístrate aquí</a>
            </div>
        </div>
    </div>
</div>
