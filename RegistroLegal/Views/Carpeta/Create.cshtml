@if (User.IsInRole(Roles.Usuario.ToString()))
{
    Layout = "_LayoutUsuario";
}
@model CreateCarpetaViewModel

@{
    ViewData["Title"] = "Registrar Carpeta";
}

<div class="container mt-5">
    <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-success text-white text-center rounded-top-4">
                <h4 class="mb-0">Registrar Nueva Carpeta</h4>
            </div>

			<div class="card-body p-4">
                <form asp-controller="Carpeta" asp-action="Create" method="post">
                    <input type="hidden" asp-for="CreatedById">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre de la carpeta</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej. Personas Peligrosas"/>
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-controller="Carpeta" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-floppy2"></i> Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
